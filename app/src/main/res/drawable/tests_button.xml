<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <size
                android:width="64dp"
                android:height="32dp"/>
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
            <solid
                android:color="@color/secondaryColor"/>
        </shape>
    </item>
    <item
        android:gravity="center"
        android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <size
                android:height="4dp"
                android:width="4dp"/>
            <solid
                android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item
        android:gravity="left|center_vertical"
        android:left="16dp"
        android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <size
                android:height="4dp"
                android:width="4dp"/>
            <solid
                android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item
        android:gravity="right|center_vertical"
        android:right="16dp"
        android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <size
                android:height="4dp"
                android:width="4dp"/>
            <solid
                android:color="@color/colorWhite"/>
        </shape>
    </item>
</layer-list>