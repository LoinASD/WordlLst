<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_line_edition"
    style="@style/AppTheme.Dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bre_edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/bre_delete_line"
            style="@style/AppTheme.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_delete_white_24dp" />

        <ImageButton
            android:id="@+id/bre_save_line"
            style="@style/AppTheme.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_save_white_24dp" />

        <ImageButton
            android:id="@+id/bre_cancel_edition"
            style="@style/AppTheme.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_close_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ble_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_line"
            style="@style/AppTheme.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="?selectableItemBackgroundBorderless"
            android:cropToPadding="false"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_mode_edit_white_24dp" />

        <ImageButton
            android:id="@+id/cut_line"
            style="@style/AppTheme.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_content_cut_white_24dp" />

        <ImageButton
            android:id="@+id/copy_line"
            style="@style/AppTheme.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_content_copy_white_24dp" />

        <ImageButton
            android:id="@+id/paste_line"
            style="@style/AppTheme.ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_content_paste_white_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Cut"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Paste"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Copy"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ble_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bre_prim"
            style="@style/AppTheme.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:enabled="false"
            android:text="kek"
            android:textColor="@color/MaterialBackground"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/bre_trans"
            style="@style/AppTheme.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:enabled="false"
            android:text="trans"
            android:textColor="@color/MaterialBackground"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>