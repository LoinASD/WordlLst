<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/line_margin"
    android:layout_marginBottom="@dimen/line_margin"
    android:layout_marginEnd="@dimen/line_margin"
    android:layout_marginLeft="@dimen/line_margin"
    android:layout_marginRight="@dimen/line_margin"
    android:layout_marginStart="@dimen/line_margin"
    android:layout_marginTop="@dimen/line_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/primeTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_weight="4"
        android:gravity="fill_vertical|start"
        android:longClickable="true"
        android:maxLines="5"
        android:text="1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/translateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="left|center_vertical"
        android:maxLines="5"
        android:text="2"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>