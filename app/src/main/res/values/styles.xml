<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:titleTextColor">@color/colorWhite</item>
        <item name="android:colorSecondary">#ffc36f</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Base.V7.Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textAppearanceButton">@style/AppTheme.Dialog.TextAppearance</item>
        <item name="editTextColor">@color/colorAccent</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Menu" parent="Base.Widget.AppCompat.ListMenuView">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ListView" parent="Base.Widget.AppCompat.ListView">
        <item name="android:listSelector">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background"></item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.Dialog.TextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:secondaryProgressTint">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/colorWhite</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="editTextColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
